{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
    <h1>Add new Ads</h1>
    <div class="row">

        <div class="col-lg-8">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        {{ form_row(form.name) }}
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        {{ form_row(form.image) }}
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="button button-contactForm boxed-btn">Send</button>
            </div>

            {{ form_end(form) }}
        </div>

    </div>



    <ul>
        <li>
            <a href="{{ path('plan_index') }}">Back to the list</a>
        </li>
    </ul>
</div>
{% endblock %}